{
  "name": "duck-bi",
  "version": "0.1.0",
  "private": true,
  "description": "Local-first DuckDB-backed BI workspace",
  "scripts": {
    "dev": "pnpm --parallel --filter backend --filter frontend dev",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "generate:types": "openapi-typescript openapi.yaml -o packages/frontend/src/lib/api-types.ts"
  },
  "devDependencies": {
    "openapi-typescript": "^7.10.1",
    "prettier": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
